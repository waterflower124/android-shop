<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseTextReg" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:fontFamily">@font/cairo_regular</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="BaseTextBold" parent="BaseTextReg">
        <item name="android:fontFamily">@font/cairo_bold</item>
    </style>

    <style name="TextWhite" parent="BaseTextReg">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="TextPrimary" parent="BaseTextReg">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="TextBlack" parent="BaseTextReg">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="TextGray" parent="BaseTextReg">
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>
    <!--              Bold Text                  -->
    <style name="TextWhiteBold" parent="BaseTextBold">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="TextPrimaryBold" parent="BaseTextBold">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="TextBlackBold" parent="BaseTextBold">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="TextGrayBold" parent="BaseTextBold">
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>
</resources>